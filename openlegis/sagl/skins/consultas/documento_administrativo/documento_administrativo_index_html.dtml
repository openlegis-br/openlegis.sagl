    // Função para sanitizar HTML
    function sanitizeHTML(str) {
        if (!str) return '';
        const div = document.createElement('div');
        div.textContent = str;
        return div.innerHTML;
    }

    // Função para destacar termos de busca
    function highlightText(text, termos) {
        if (!termos || !text) return text;
        const termosArray = termos.toLowerCase().split(/\s+/).filter(t => t.length > 2);
        let highlighted = text;
        termosArray.forEach(termo => {
            const regex = new RegExp(`(${termo})`, 'gi');
            highlighted = highlighted.replace(regex, '<mark>$1</mark>');
        });
        return highlighted;
    }

    // Função para aplicar modo de visualização
    function applyViewMode(mode) {
        currentViewMode = mode;
