    // Função para popular formulário a partir da URL
    function popularFormPelaURL() {
        const params = new URLSearchParams(window.location.search);
        if (!params.toString()) return;
        const uniqueKeys = [...new Set(params.keys())];
        uniqueKeys.forEach(key => {
            const el = form.elements[key];
            if (el) {
                if (el.tomselect) {
                    const allValues = params.getAll(key);
                    el.tomselect.setValue(allValues, true);
                }
                else if (el.type === 'radio') {
                    const radioWithValue = document.querySelector(`input[name="${key}"][value="${params.get(key)}"]`);
                    if (radioWithValue) radioWithValue.checked = true;
                }
                else if (el.type === 'checkbox') {
                    el.checked = (params.get(key) === '1');
                }
                else {
                    el.value = params.get(key);
                }
            }
        });
        
        // Tratar campos de data (período)
        const startDateParam = params.get('dt_apres1');
        const endDateParam = params.get('dt_apres2');
        if (startDateParam || endDateParam) {
            if (daterangePicker) {
                daterangePicker.setDate([startDateParam, endDateParam], false);
            }
            const dtApres1Hidden = document.getElementById('dt_apres1_hidden');
            const dtApres2Hidden = document.getElementById('dt_apres2_hidden');
            if (dtApres1Hidden) dtApres1Hidden.value = startDateParam || '';
            if (dtApres2Hidden) dtApres2Hidden.value = endDateParam || '';
        }
        
        // Verificar se há filtros avançados na URL
        const hasAdvancedFilterInURL = ['txt_num_protocolo', 'txt_npc', 'lst_tramitou', 
                                      'lst_localizacao', 'lst_status', 'lst_assunto', 
                                      'rad_tramitando'].some(field => params.has(field)) || 
                                      startDateParam || endDateParam;
        if (hasAdvancedFilterInURL) {
            const advancedSearchDiv = document.getElementById('advancedSearch');
            if (advancedSearchDiv && bsCollapseAdvancedSearch) {
                bsCollapseAdvancedSearch.show();
            }
        }
        
        // Aguardar um pouco para garantir que os TomSelects foram populados
        setTimeout(() => {
            contarFiltrosAtivos();
            mostrarResumoFiltros(new FormData(form));
            realizarBusca(
               parseInt(params.get('pagina') || '1'),  
               params.get('itens_por_pagina') || '12'
            );
        }, 300);
    }

