    // Realizar busca
    // Função de validação do formulário
    function validarFormulario() {
        let isValid = true;
        const numDocumentoInput = document.getElementById('txt_num_documento');
        const anoDocumentoInput = document.getElementById('txt_ano_documento');
        const numProtocoloInput = document.getElementById('txt_num_protocolo');
        const npcInput = document.getElementById('txt_npc');
        
        // Remover classes de erro anteriores
        if (numDocumentoInput) {
            numDocumentoInput.classList.remove('is-invalid');
            numDocumentoInput.setAttribute('aria-invalid', 'false');
        }
        if (anoDocumentoInput) {
            anoDocumentoInput.classList.remove('is-invalid');
            anoDocumentoInput.setAttribute('aria-invalid', 'false');
        }
        if (numProtocoloInput) {
            numProtocoloInput.classList.remove('is-invalid');
            numProtocoloInput.setAttribute('aria-invalid', 'false');
        }
        if (npcInput) {
            npcInput.classList.remove('is-invalid');
            npcInput.setAttribute('aria-invalid', 'false');
        }
        
        // Validar ano do documento (4 dígitos)
        if (anoDocumentoInput && anoDocumentoInput.value && !/^\d{4}$/.test(anoDocumentoInput.value)) {
            anoDocumentoInput.classList.add('is-invalid');
            anoDocumentoInput.setAttribute('aria-invalid', 'true');
            const feedbackEl = document.getElementById('txt_ano_documento_feedback');
            if (feedbackEl) {
                feedbackEl.textContent = 'Por favor, insira um ano válido com 4 dígitos (ex: 2025).';
                feedbackEl.classList.add('d-block');
                feedbackEl.classList.remove('d-none');
            }
            isValid = false;
        }
        
        // Validar número do documento (apenas números)
        if (numDocumentoInput && numDocumentoInput.value && !/^\d+$/.test(numDocumentoInput.value)) {
            numDocumentoInput.classList.add('is-invalid');
            numDocumentoInput.setAttribute('aria-invalid', 'true');
            const feedbackEl = document.getElementById('txt_num_documento_feedback');
            if (feedbackEl) {
                feedbackEl.textContent = 'Por favor, insira apenas números.';
                feedbackEl.classList.add('d-block');
                feedbackEl.classList.remove('d-none');
            }
            isValid = false;
        }
        
        // Validar número do protocolo (apenas números)
        if (numProtocoloInput && numProtocoloInput.value && !/^\d+$/.test(numProtocoloInput.value)) {
            numProtocoloInput.classList.add('is-invalid');
            numProtocoloInput.setAttribute('aria-invalid', 'true');
            const feedbackEl = document.getElementById('txt_num_protocolo_feedback');
            if (feedbackEl) {
                feedbackEl.textContent = 'Por favor, insira apenas números.';
                feedbackEl.classList.add('d-block');
                feedbackEl.classList.remove('d-none');
            }
            isValid = false;
        }
        
        // Validar NPC (apenas números)
        if (npcInput && npcInput.value && !/^\d+$/.test(npcInput.value)) {
            npcInput.classList.add('is-invalid');
            npcInput.setAttribute('aria-invalid', 'true');
            const feedbackEl = document.getElementById('txt_npc_feedback');
            if (feedbackEl) {
                feedbackEl.textContent = 'Por favor, insira apenas números.';
                feedbackEl.classList.add('d-block');
                feedbackEl.classList.remove('d-none');
            }
            isValid = false;
        }
        
        return isValid;
    }

    async function realizarBusca(page = 1, itensPorPaginaParam = null) {
        if (!validarFormulario()) return;
        
        const itensPorPaginaAtual = itensPorPaginaParam || (itensPorPaginaSelect ? itensPorPaginaSelect.value : '12');
        document.getElementById('pagina').value = page;
        pesquisarBtn.disabled = true;
        pesquisarBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Buscando...';
        pesquisarBtn.setAttribute('aria-busy', 'true');
        
        showSkeletonLoading();
        try {
            const formData = new FormData(form);
            const params = new URLSearchParams();
            
            // Processar todos os campos do formulário, incluindo múltiplos valores
            for (const [key, value] of formData.entries()) {
                if (key === 'daterange_input') continue;
                // Para campos múltiplos (TomSelect), adicionar todos os valores
                if (key === 'lst_tip_documento' || key === 'lst_assunto') {
                    const selectElement = form.elements[key];
                    if (selectElement && selectElement.tomselect) {
                        const values = selectElement.tomselect.getValue();
                        if (Array.isArray(values) && values.length > 0) {
                            values.forEach(val => params.append(key, val));
                        } else if (values) {
                            params.append(key, values);
                        }
                    } else {
                        // Fallback: usar FormData se TomSelect não estiver disponível
                        params.append(key, value);
                    }
                } else {
                    params.append(key, value);
                }
            }
            
            params.set('pagina', page);
            params.set('itens_por_pagina', itensPorPaginaAtual);
            actualizarURL(params);
            mostrarResumoFiltros(new FormData(form));
            const data = await fetchWithCache(`documentos_administrativos_json?${params.toString()}`);
            
            renderizarResultados(data);
            limparBtn.classList.remove('d-none');
            limparBtn.classList.add('d-inline-block');
            if (bsCollapseFiltros) bsCollapseFiltros.hide();
        } catch (error) {
            console.error('Erro na busca:', error);
            renderizarErro(error.message || 'Ocorreu um erro ao buscar os dados.');
        } finally {
            pesquisarBtn.disabled = false;
            pesquisarBtn.innerHTML = '<i class="fa fa-search me-1"></i> Pesquisar';
            pesquisarBtn.removeAttribute('aria-busy');
            resultadosDiv.removeAttribute('aria-busy');
        }
    }

    // Carregar estatísticas sob demanda
    async function carregarEstatisticas() {
        if (statsCarregadas) return; // Já foram carregadas, não precisa carregar novamente
        if (carregandoEstatisticas) {
            return; // Já está carregando, não iniciar outra requisição
        }
        carregandoEstatisticas = true;
        
        const graficoTab = document.querySelector('#grafico-tab');
        if (!graficoTab) {
            carregandoEstatisticas = false;
            return;
        }
        
        // Mostrar indicador de carregamento sem remover o canvas
        const graficoPane = document.querySelector('#grafico-pane');
        
        // Garantir que o container exista
        if (graficoPane && !graficoPane.querySelector('#resumo-estatistico')) {
            graficoPane.innerHTML = '<div id="resumo-estatistico" class="p-3" style="position: relative;"><div class="canvas-container"><canvas id="stats-chart" aria-label="Gráfico de resumo estatístico dos processos administrativos"></canvas></div></div>';
        }
        
        const graficoContainer = graficoPane ? graficoPane.querySelector('#resumo-estatistico') : null;
        
        // Adicionar overlay de carregamento sem remover o conteúdo existente
        if (graficoContainer) {
            let loadingOverlay = graficoContainer.querySelector('.loading-overlay');
            if (!loadingOverlay) {
                loadingOverlay = document.createElement('div');
                loadingOverlay.className = 'loading-overlay position-absolute w-100 h-100 d-flex align-items-center justify-content-center';
                loadingOverlay.style.cssText = 'top: 0; left: 0; background: rgba(255,255,255,0.9); z-index: 10;';
                loadingOverlay.innerHTML = '<div class="text-center"><i class="fa fa-spinner fa-spin fa-2x"></i><p class="mt-2">Carregando estatísticas...</p></div>';
                if (!graficoContainer.style.position) {
                    graficoContainer.style.position = 'relative';
                }
                graficoContainer.appendChild(loadingOverlay);
            }
        }
        
        try {
            const params = new URLSearchParams(new FormData(form));
            params.delete('daterange_input');
            params.set('calcular_estatisticas', '1');
            params.set('pagina', '1');
            params.set('itens_por_pagina', '1'); // Não precisamos dos dados, só das estatísticas
            
            // Processar campos TomSelect
            const selects = ['lst_tip_documento', 'lst_assunto'];
            selects.forEach(selectName => {
                params.delete(selectName);
                const el = form.elements[selectName];
                if (el && el.tomselect) {
                    const values = el.tomselect.getValue();
                    if (Array.isArray(values) && values.length > 0) {
                        values.forEach(v => params.append(selectName, v));
                    } else if (values) {
                        params.append(selectName, values);
                    }
                }
            });
            
            const response = await fetchWithCache(`documentos_administrativos_json?${params.toString()}`);
            
            
            // Remover TODOS os overlays de carregamento
            const allLoadingOverlays = document.querySelectorAll('.loading-overlay');
            allLoadingOverlays.forEach(overlay => {
                overlay.remove();
            });
            
            // Também remover qualquer placeholder que possa estar bloqueando
            const placeholders = document.querySelectorAll('.stats-placeholder');
            placeholders.forEach(placeholder => {
                placeholder.remove();
            });
            
            // Garantir que o container existe
            if (!graficoPane) {
                console.error('grafico-pane não encontrado!');
                carregandoEstatisticas = false;
                return;
            }
            
            // Restaurar a estrutura HTML do container se foi substituída
            if (!graficoPane.querySelector('#resumo-estatistico')) {
                graficoPane.innerHTML = '<div id="resumo-estatistico" class="p-3"><div class="d-flex justify-content-end mb-2"><div class="btn-group" role="group" aria-label="Tipo de gráfico"><button type="button" class="btn btn-sm btn-outline-primary active" id="btn-grafico-barra-tipo" data-tipo="bar"><i class="fa fa-chart-bar me-1"></i>Barra</button><button type="button" class="btn btn-sm btn-outline-primary" id="btn-grafico-pizza-tipo" data-tipo="pie"><i class="fa fa-chart-pie me-1"></i>Pizza</button></div></div><div class="canvas-container"><canvas id="stats-chart" aria-label="Gráfico de resumo estatístico dos processos administrativos"></canvas></div></div>';
            }
            
            // Garantir que o canvas exista
            let statsChartCanvas = document.getElementById('stats-chart');
            if (!statsChartCanvas) {
                const statsContainer = document.querySelector('#resumo-estatistico .canvas-container');
                if (statsContainer) {
                    // Remover placeholder se existir
                    const placeholder = statsContainer.querySelector('.stats-placeholder');
                    if (placeholder) placeholder.remove();
                    statsContainer.innerHTML = '<canvas id="stats-chart" aria-label="Gráfico de resumo estatístico dos processos administrativos"></canvas>';
                    statsChartCanvas = document.getElementById('stats-chart');
                } else {
                    console.error('Container #resumo-estatistico .canvas-container não encontrado!');
                }
            } else {
                // Remover placeholder se existir e o canvas já existe
                const statsContainer = statsChartCanvas.parentElement;
                if (statsContainer) {
                    const placeholder = statsContainer.querySelector('.stats-placeholder');
                    if (placeholder) {
                        placeholder.remove();
                    }
                }
            }
            
            if (response && response.stats_by_type && Object.keys(response.stats_by_type).length > 0) {
                window.ultimoStatsData = response.stats_by_type;
                renderStatsChart(response.stats_by_type);
                statsCarregadas = true;
            } else {
                const statsContainer = document.querySelector('#resumo-estatistico .canvas-container');
                if (statsContainer) {
                    statsContainer.innerHTML = '<div class="stats-placeholder text-center p-4"><p class="text-muted">Nenhuma estatística disponível</p></div>';
                }
            }
        } catch (error) {
            console.error('Erro ao carregar estatísticas:', error);
            // Remover overlays em caso de erro
            const allLoadingOverlays = document.querySelectorAll('.loading-overlay');
            allLoadingOverlays.forEach(overlay => overlay.remove());
            
            const canvas = document.getElementById('stats-chart');
            if (canvas) {
                const container = canvas.parentElement;
                if (container) {
                    container.innerHTML = '<div class="stats-placeholder text-center p-4"><p class="text-danger">Erro ao carregar estatísticas</p></div>';
                }
            }
        } finally {
            carregandoEstatisticas = false;
        }
    }

