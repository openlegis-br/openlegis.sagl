<script>
document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('form-pesquisa');
    const pesquisarBtn = document.getElementById('btn-pesquisar');
    const limparBtn = document.getElementById('btn-limpar');
    const resultadosDiv = document.getElementById('resultados');
    const painelSemResultados = document.getElementById('painel-sem-resultados');
    const containerPrincipal = document.getElementById('container-principal-resultados');
    const resumoFiltrosDiv = document.getElementById('resumo-filtros');
    const badgeFiltros = document.getElementById('badge-filtros');
    const btnToggleFiltros = document.getElementById('btn-toggle-filtros');
    const filterClearedToastEl = document.getElementById('filter-cleared-toast');
    let filterClearedToast = null;
    const apiCache = new Map();
    
    // Bootstrap Collapse para filtros
    let bsCollapseFiltros = null;
    let bsCollapseAdvancedSearch = null;
    if (document.getElementById('filtro-container')) {
        bsCollapseFiltros = new bootstrap.Collapse(document.getElementById('filtro-container'), { toggle: false });
    }
    const advancedSearchDiv = document.getElementById('advancedSearch');
    if (advancedSearchDiv) {
        bsCollapseAdvancedSearch = new bootstrap.Collapse(advancedSearchDiv, { toggle: false });
    }
    
    // Event listeners para collapse de filtros avançados
    if (advancedSearchDiv) {
        advancedSearchDiv.addEventListener('show.bs.collapse', function() {
            const icon = document.querySelector('[data-bs-target="#advancedSearch"] .filter-toggle-icon');
            if (icon) icon.classList.add('expanded');
        });
        advancedSearchDiv.addEventListener('hide.bs.collapse', function() {
            const icon = document.querySelector('[data-bs-target="#advancedSearch"] .filter-toggle-icon');
            if (icon) icon.classList.remove('expanded');
        });
    }
    
    // Date Range Picker
    const daterangePicker = flatpickr('#daterange_input', {
        mode: 'range',
        dateFormat: "d/m/Y",
        locale: 'pt',
        onClose: function(selectedDates) {
            const dataInicioHidden = document.getElementById('dt_apres1_hidden');
            const dataFimHidden = document.getElementById('dt_apres2_hidden');
            if (selectedDates.length === 2) {
                dataInicioHidden.value = flatpickr.formatDate(selectedDates[0], "d/m/Y");
                dataFimHidden.value = flatpickr.formatDate(selectedDates[1], "d/m/Y");
            } else {
                dataInicioHidden.value = '';
                dataFimHidden.value = '';
            }
            dataInicioHidden.dispatchEvent(new Event('change'));
        }
    });
    
    // Função para presets de data
    function handleDatePreset(btn) {
        const preset = btn.dataset.preset;
        if (!preset) return;
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        let startDate, endDate;
        switch (preset) {
            case 'hoje':
                startDate = today;
                endDate = today;
                break;
            case 'semana':
                endDate = new Date(today);
                startDate = new Date(today);
                startDate.setDate(today.getDate() - 6);
                break;
            case 'mes_atual':
                startDate = new Date(today.getFullYear(), today.getMonth(), 1);
                endDate = new Date(today.getFullYear(), today.getMonth() + 1, 0);
                break;
            case 'mes_passado':
                const prevMonth = new Date(today.getFullYear(), today.getMonth() - 1, 1);
                startDate = new Date(prevMonth.getFullYear(), prevMonth.getMonth(), 1);
                endDate = new Date(prevMonth.getFullYear(), prevMonth.getMonth() + 1, 0);
                break;
        }
        if (startDate && endDate) {
            daterangePicker.setDate([startDate, endDate], true);
            const onCloseCallback = daterangePicker.config.onClose;
            if (onCloseCallback) {
                onCloseCallback(daterangePicker.selectedDates, '', daterangePicker);
            }
        }
    }
    
    // Event listeners para presets de data
    document.querySelectorAll('[data-preset]').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            handleDatePreset(this);
        });
    });

    // Carregar tipos de documento
    async function carregarTiposDocumento() {
        const selectElement = document.getElementById('lst_tip_documento');
        if (!selectElement) {
            console.error("Elemento lst_tip_documento não encontrado");
            return;
        }
        
        // Verificar se já existe uma instância do TomSelect
        let tomselect = selectElement.tomselect;
        if (!tomselect) {
            tomselect = new TomSelect(selectElement, {
                plugins: ['remove_button'],
                placeholder: 'Carregando tipos...',
                maxItems: null
            });
        }
        
        tomselect.disable();
        try {
            const endpointUrl = 'tipos_documento_administrativo_json';
            const response = await fetch(endpointUrl);
            
            if (!response.ok) {
                const errorText = await response.text();
                throw new Error(`Erro ao buscar tipos: ${response.status} - ${errorText.substring(0, 200)}`);
            }
            
            const data = await response.json();
            
            if (!Array.isArray(data)) {
                tomselect.settings.placeholder = 'Erro: resposta inválida';
                tomselect.enable();
                return;
            }
            
            if (data.length === 0) {
                tomselect.settings.placeholder = 'Nenhum tipo disponível';
                tomselect.enable();
                return;
            }
            
            // Limpar opções existentes
            tomselect.clear();
            tomselect.clearOptions();
            
            // Converter dados para o formato esperado pelo TomSelect
            const opcoesFormatadas = data.map(item => {
                if (item && item.id && item.text) {
                    return {
                        value: String(item.id),
                        text: String(item.text)
                    };
                }
                return null;
            }).filter(item => item !== null);
            
            // Usar load para carregar todas as opções de uma vez
            tomselect.clearOptions();
            tomselect.addOptions(opcoesFormatadas, true); // true = silencioso (não dispara eventos)
            
            // Habilitar e atualizar
            tomselect.enable();
            tomselect.settings.placeholder = 'Selecione um ou mais tipos...';
            
            // Forçar atualização visual
            tomselect.refreshOptions(false);
        } catch (error) {
            console.error("Erro ao carregar tipos:", error);
            tomselect.settings.placeholder = 'Erro ao carregar tipos';
            tomselect.enable();
        }
    }

    // Carregar selects simples
    async function carregarSelectSimples(endpoint, selector, placeholder) {
        const selectElement = document.querySelector(selector);
        if (!selectElement) {
            console.error(`Elemento ${selector} não encontrado`);
            return;
        }
        
        // Verificar se já existe uma instância do TomSelect
        let tomselect = selectElement.tomselect;
        if (!tomselect) {
            tomselect = new TomSelect(selectElement, {
                plugins: ['clear_button'],
                placeholder: 'Carregando...'
            });
        } else {
        }
        
        tomselect.disable();
        try {
            // Usar nome do endpoint diretamente (Grok resolve automaticamente)
            const endpointUrl = endpoint.startsWith('http') ? endpoint : endpoint;
            const response = await fetch(endpointUrl);
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error(`Erro HTTP ${response.status}: ${response.statusText}`);
                throw new Error(`Erro HTTP ${response.status}: ${response.statusText}`);
            }
            
            const data = await response.json();
            
            if (!Array.isArray(data)) {
                console.error(`Resposta de ${endpoint} não é um array:`, data);
                tomselect.settings.placeholder = 'Erro: resposta inválida';
                tomselect.enable();
                return;
            }
            
            if (data.length === 0) {
                tomselect.settings.placeholder = 'Nenhum dado disponível';
                tomselect.enable();
                return;
            }
            
            
            // Limpar opções existentes
            tomselect.clear();
            tomselect.clearOptions();
            
            // Converter dados para o formato esperado pelo TomSelect
            const opcoesFormatadas = data.map(item => {
                if (item && (item.id || item.value) && (item.text || item.descricao || item.label)) {
                    return {
                        value: String(item.id || item.value),
                        text: String(item.text || item.descricao || item.label)
                    };
                }
                return null;
            }).filter(item => item !== null);
            
            
            // Usar addOptions para carregar todas as opções de uma vez
            tomselect.clearOptions();
            tomselect.addOptions(opcoesFormatadas, true); // true = silencioso (não dispara eventos)
            
            // Habilitar e atualizar
            tomselect.enable();
            tomselect.settings.placeholder = placeholder;
            
            // Forçar atualização visual
            tomselect.refreshOptions(false);
            tomselect.sync();
            
        } catch (error) {
            console.error(`Erro ao carregar ${endpoint}:`, error);
            tomselect.settings.placeholder = `Erro ao carregar`;
            tomselect.enable();
            tomselect.sync();
        }
    }

