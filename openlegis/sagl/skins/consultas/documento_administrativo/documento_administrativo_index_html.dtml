        e.preventDefault();
        realizarBusca(1);
    });

    limparBtn.addEventListener('click', handleLimparClick);
    
    // Event listener para itens por página usando delegação (funciona mesmo quando o select é recriado)
    resultadosDiv.addEventListener('change', function(e) {
        if (e.target && e.target.id === 'itens_por_pagina') {
            e.preventDefault();
            e.stopPropagation();
            const valor = e.target.value;
            realizarBusca(1, valor);
        }
    });

    // Adicionar event listener para aba de gráfico usando delegação no container de abas
    const resultadoTabs = document.getElementById('resultado-tabs');
    if (resultadoTabs) {
        resultadoTabs.addEventListener('shown.bs.tab', function(e) {
            const targetId = e.target.getAttribute('data-bs-target');
            if (targetId === '#grafico-pane') {
                if (!statsCarregadas && !carregandoEstatisticas) {
                    carregarEstatisticas();
                } else if (statsCarregadas && window.ultimoStatsData) {
                    // Se já foram carregadas, apenas renderizar novamente
                    renderStatsChart(window.ultimoStatsData);
                }
            }
        });
    }

    // ============================================
    // VALIDAÇÃO DE CAMPOS NUMÉRICOS EM TEMPO REAL
    // ============================================
    
    // Validação de número do documento (apenas números) com feedback melhorado
    const numDocumentoInput = document.getElementById('txt_num_documento');
    if (numDocumentoInput) {
        // Bloquear caracteres não numéricos em tempo real
        numDocumentoInput.addEventListener('keypress', function(e) {
            // Permitir apenas números (0-9)
            if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Enter', 'ArrowLeft', 'ArrowRight', 'Home', 'End'].includes(e.key)) {
                e.preventDefault();
            }
        });
        
        // Também validar no evento input para copiar/colar
        numDocumentoInput.addEventListener('input', function(e) {
            // Remover qualquer caractere não numérico
            const value = e.target.value.replace(/\D/g, '');
            if (e.target.value !== value) {
                e.target.value = value;
            }
            
            const feedbackEl = document.getElementById('txt_num_documento_feedback');
            if (value && !/^\d+$/.test(value)) {
                e.target.classList.add('is-invalid');
                e.target.setAttribute('aria-invalid', 'true');
                if (feedbackEl) {
                    feedbackEl.textContent = 'Por favor, insira apenas números.';
                    feedbackEl.classList.add('d-block');
                    feedbackEl.classList.remove('d-none');
                }
            } else {
                e.target.classList.remove('is-invalid');
                e.target.setAttribute('aria-invalid', 'false');
                if (feedbackEl) {
                    feedbackEl.classList.remove('d-block');
                    feedbackEl.classList.add('d-none');
                }
            }
        });
    }
    
    // Validação de ano do documento (4 dígitos, entre 1900 e 2100) com feedback melhorado
    const anoDocumentoInput = document.getElementById('txt_ano_documento');
    if (anoDocumentoInput) {
        // Bloquear caracteres não numéricos e limitar a 4 dígitos em tempo real
        anoDocumentoInput.addEventListener('keypress', function(e) {
            // Permitir apenas números (0-9)
            if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Enter', 'ArrowLeft', 'ArrowRight', 'Home', 'End'].includes(e.key)) {
                e.preventDefault();
            }
            // Limitar a 4 dígitos
            if (e.target.value.length >= 4 && /[0-9]/.test(e.key)) {
                e.preventDefault();
            }
        });
        
        // Também validar no evento input para copiar/colar
        anoDocumentoInput.addEventListener('input', function(e) {
            // Remover qualquer caractere não numérico e limitar a 4 dígitos
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 4) {
                value = value.substring(0, 4);
            }
            if (e.target.value !== value) {
                e.target.value = value;
            }
            
            const feedbackEl = document.getElementById('txt_ano_documento_feedback');
            if (value && (!/^\d{4}$/.test(value) || parseInt(value) < 1900 || parseInt(value) > 2100)) {
                e.target.classList.add('is-invalid');
                e.target.setAttribute('aria-invalid', 'true');
                if (feedbackEl) {
                    if (!/^\d{4}$/.test(value)) {
                        feedbackEl.textContent = 'Por favor, insira um ano válido com 4 dígitos (ex: 2025).';
                    } else {
                        feedbackEl.textContent = 'Por favor, insira um ano entre 1900 e 2100.';
                    }
                    feedbackEl.classList.add('d-block');
                    feedbackEl.classList.remove('d-none');
                }
            } else {
                e.target.classList.remove('is-invalid');
                e.target.setAttribute('aria-invalid', 'false');
                if (feedbackEl) {
                    feedbackEl.classList.remove('d-block');
                    feedbackEl.classList.add('d-none');
                }
            }
        });
    }
    
    // Validação de número do protocolo (apenas números) com feedback melhorado
    const numProtocoloInput = document.getElementById('txt_num_protocolo');
    if (numProtocoloInput) {
        // Bloquear caracteres não numéricos em tempo real
        numProtocoloInput.addEventListener('keypress', function(e) {
            // Permitir apenas números (0-9)
            if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Enter', 'ArrowLeft', 'ArrowRight', 'Home', 'End'].includes(e.key)) {
                e.preventDefault();
            }
        });
        
        // Também validar no evento input para copiar/colar
        numProtocoloInput.addEventListener('input', function(e) {
            // Remover qualquer caractere não numérico
            const value = e.target.value.replace(/\D/g, '');
            if (e.target.value !== value) {
                e.target.value = value;
            }
            
            const feedbackEl = document.getElementById('txt_num_protocolo_feedback');
            if (value && !/^\d+$/.test(value)) {
                e.target.classList.add('is-invalid');
                e.target.setAttribute('aria-invalid', 'true');
                if (feedbackEl) {
                    feedbackEl.textContent = 'Por favor, insira apenas números.';
                    feedbackEl.classList.add('d-block');
                    feedbackEl.classList.remove('d-none');
                }
            } else {
                e.target.classList.remove('is-invalid');
                e.target.setAttribute('aria-invalid', 'false');
                if (feedbackEl) {
                    feedbackEl.classList.remove('d-block');
                    feedbackEl.classList.add('d-none');
                }
            }
        });
    }
    
    // Validação de NPC (apenas números) com feedback melhorado
    const npcInput = document.getElementById('txt_npc');
    if (npcInput) {
        // Bloquear caracteres não numéricos em tempo real
        npcInput.addEventListener('keypress', function(e) {
            // Permitir apenas números (0-9)
            if (!/[0-9]/.test(e.key) && !['Backspace', 'Delete', 'Tab', 'Enter', 'ArrowLeft', 'ArrowRight', 'Home', 'End'].includes(e.key)) {
                e.preventDefault();
            }
        });
        
        // Também validar no evento input para copiar/colar
        npcInput.addEventListener('input', function(e) {
            // Remover qualquer caractere não numérico
            const value = e.target.value.replace(/\D/g, '');
            if (e.target.value !== value) {
                e.target.value = value;
            }
            
            const feedbackEl = document.getElementById('txt_npc_feedback');
            if (value && !/^\d+$/.test(value)) {
                e.target.classList.add('is-invalid');
                e.target.setAttribute('aria-invalid', 'true');
                if (feedbackEl) {
                    feedbackEl.textContent = 'Por favor, insira apenas números.';
                    feedbackEl.classList.add('d-block');
                    feedbackEl.classList.remove('d-none');
                }
            } else {
                e.target.classList.remove('is-invalid');
                e.target.setAttribute('aria-invalid', 'false');
                if (feedbackEl) {
                    feedbackEl.classList.remove('d-block');
                    feedbackEl.classList.add('d-none');
                }
            }
        });
    }

    // ============================================
    // MELHORIAS DE UX: ATALHOS DE TECLADO
    // ============================================
    
    document.addEventListener('keydown', function(e) {
        // Ctrl+K / Cmd+K: Foco no primeiro campo de busca
        if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
            e.preventDefault();
            const assuntoInput = document.getElementById('txa_txt_assunto');
            if (assuntoInput) {
                assuntoInput.focus();
                assuntoInput.select();
            }
        }
        
        // Enter: Executar busca (se não estiver em textarea ou input de múltiplas linhas)
        if (e.key === 'Enter' && e.target.tagName !== 'TEXTAREA' && !e.target.isContentEditable) {
            if (e.target.closest('#form-pesquisa') && !e.target.closest('.btn')) {
                e.preventDefault();
                pesquisarBtn?.click();
            }
        }
        
        // Esc: Limpar filtros (se não estiver em input/textarea)
        if (e.key === 'Escape' && !['INPUT', 'TEXTAREA'].includes(e.target.tagName)) {
            if (haFiltrosAtivos()) {
                limparBtn?.click();
            }
        }
        
        // /: Foco no primeiro campo (se não estiver em input)
        if (e.key === '/' && !['INPUT', 'TEXTAREA'].includes(e.target.tagName)) {
            e.preventDefault();
            const primeiroCampo = form.querySelector('input[type="text"], select');
            if (primeiroCampo) {
                primeiroCampo.focus();
            }
        }
    });

    // Inicialização
    Promise.all([
        carregarTiposDocumento(),
        carregarSelectSimples('unidades_tramitacao_administrativo_json', '#lst_tramitou', 'Selecione onde tramitou...'),
        carregarSelectSimples('unidades_tramitacao_administrativo_json', '#lst_localizacao', 'Selecione localização...'),
        carregarSelectSimples('status_tramitacao_administrativo_json', '#lst_status', 'Selecione situação...'),
        carregarSelectSimples('tipos_peticionamento_json', '#lst_assunto', 'Selecione classificação...')
    ]).then(() => {
        if (window.location.search) {
            popularFormPelaURL();
        } else {
            contarFiltrosAtivos();
            mostrarResumoFiltros(new FormData(form));
            showInitialMessage();
        }
    }).catch(error => {
        console.error("Erro ao carregar dados iniciais:", error);
        renderizarErro("Não foi possível carregar os filtros. Recarregue a página.");
    });

    // Função para abrir modal de documentos
    async function handleDocumentoClick(badge) {
        const codDocumento = badge.dataset.codDocumento;
        const tipo = badge.dataset.tipo;
        if (!codDocumento || !tipo) return;
        
        const modal = new bootstrap.Modal(document.getElementById('modalDocumentos'));
        const modalBody = document.getElementById('modalDocumentosBody');
        const modalTitle = document.getElementById('modalDocumentosLabel');
        
        const tipoTitulos = {
            'documentos_acessorios': 'Documentos Acessórios',
            'processos_vinculados': 'Processos Vinculados',
            'materias_vinculadas': 'Matérias Vinculadas'
        };
        
        // Obter identificação do processo
        const tipoDocumento = badge.dataset.tipoDocumento || '';
        const numDocumento = badge.dataset.numDocumento || '';
        const anoDocumento = badge.dataset.anoDocumento || '';
        const sglTipoDocumento = badge.dataset.sglTipoDocumento || '';
        
        // Formatar identificação: sigla número/ano (ex: REQ 10/2015)
        let identificacaoProcesso = '';
        if (numDocumento && anoDocumento) {
            let sigla = sglTipoDocumento;
            if (!sigla && tipoDocumento) {
                // Extrair sigla do tipo (ex: "Requerimento" -> "REQ")
                const palavras = tipoDocumento.split(' ').filter(p => p.length > 2 && /^[A-Z]/.test(p));
                sigla = palavras.map(p => p[0]).join('').substring(0, 5) || tipoDocumento.substring(0, 10);
            }
            identificacaoProcesso = sigla 
                ? `${sigla} ${numDocumento}/${anoDocumento}`
                : `${numDocumento}/${anoDocumento}`;
        }
        
        // Montar título do modal
        const tituloTipo = tipoTitulos[tipo] || 'Documentos';
        modalTitle.textContent = identificacaoProcesso 
            ? `${tituloTipo} - ${identificacaoProcesso}`
            : tituloTipo;
        modalBody.innerHTML = '<div class="text-center p-5"><i class="fa fa-spinner fa-spin fa-2x"></i><p class="mt-2">Carregando documentos...</p></div>';
        modal.show();
        
        try {
            const data = await fetchWithCache(`documento_administrativo_documentos_json?cod_documento=${codDocumento}&tipo=${tipo}`);
            const documentos = data[tipo] || [];
            
            if (documentos.length === 0) {
                modalBody.innerHTML = `<p class="text-center text-muted">Nenhum ${tipoTitulos[tipo].toLowerCase()} encontrado.</p>`;
                return;
            }
            
            let html = '<ul class="list-group">';
            documentos.forEach(doc => {
                let titulo = '';
                let subtitulo = '';
                
                if (tipo === 'documentos_acessorios') {
                    titulo = doc.nom_documento || doc.des_tipo_documento || 'Documento';
                    const partesSubtitulo = [];
                    if (doc.dat_documento) {
                        partesSubtitulo.push(`<i class="fa fa-calendar-alt me-1"></i>${sanitizeHTML(doc.dat_documento)}`);
                    }
                    if (doc.nom_autor_documento) {
                        partesSubtitulo.push(`<i class="fa fa-user-edit me-1"></i><strong>Autoria:</strong> ${sanitizeHTML(doc.nom_autor_documento)}`);
                    }
                    if (doc.txt_assunto) {
                        partesSubtitulo.push(`<i class="fa fa-file-text me-1"></i>${sanitizeHTML(doc.txt_assunto.substring(0, 100) + (doc.txt_assunto.length > 100 ? '...' : ''))}`);
                    }
                    subtitulo = partesSubtitulo.join(' <span class="text-muted">|</span> ');
                } else if (tipo === 'processos_vinculados') {
                    titulo = `${doc.sgl_tipo_documento || ''} ${doc.num_documento}/${doc.ano_documento}`.trim();
                    const partesSubtitulo = [];
                    if (doc.dat_documento) {
                        partesSubtitulo.push(`<i class="fa fa-calendar-alt me-1"></i>${sanitizeHTML(doc.dat_documento)}`);
                    }
                    if (doc.txt_interessado) {
                        partesSubtitulo.push(`<i class="fa fa-user me-1"></i><strong>Interessado:</strong> ${sanitizeHTML(doc.txt_interessado)}`);
                    }
                    if (doc.txt_assunto) {
                        partesSubtitulo.push(`<i class="fa fa-file-text me-1"></i>${sanitizeHTML(doc.txt_assunto.substring(0, 100) + (doc.txt_assunto.length > 100 ? '...' : ''))}`);
                    }
                    subtitulo = partesSubtitulo.join(' <span class="text-muted">|</span> ');
                } else if (tipo === 'materias_vinculadas') {
                    titulo = `${doc.sgl_tipo_materia || ''} ${doc.num_ident_basica}/${doc.ano_ident_basica}`.trim();
                    const partesSubtitulo = [];
                    if (doc.dat_apresentacao) {
                        partesSubtitulo.push(`<i class="fa fa-calendar-alt me-1"></i>${sanitizeHTML(doc.dat_apresentacao)}`);
                    }
                    if (doc.txt_ementa) {
                        partesSubtitulo.push(`<i class="fa fa-file-text me-1"></i>${sanitizeHTML(doc.txt_ementa.substring(0, 100) + (doc.txt_ementa.length > 100 ? '...' : ''))}`);
                    }
                    subtitulo = partesSubtitulo.join(' <span class="text-muted">|</span> ');
                }
                
                html += `
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                ${doc.url ? `<a href="${doc.url}" target="_blank" class="text-decoration-none">` : '<span>'}
                                <i class="fa fa-file-pdf text-danger me-2"></i>
                                <strong>${sanitizeHTML(titulo)}</strong>
                                ${doc.url ? '</a>' : '</span>'}
                                ${subtitulo ? `<div class="mt-2"><small class="text-muted">${subtitulo}</small></div>` : ''}
                            </div>
                            ${doc.url ? '<i class="fa fa-external-link-alt text-muted ms-2"></i>' : ''}
                        </div>
                    </li>
                `;
            });
            html += '</ul>';
            modalBody.innerHTML = html;
        } catch (error) {
            console.error('Erro ao carregar documentos:', error);
            modalBody.innerHTML = `<div class="alert alert-danger">Erro ao carregar documentos: ${sanitizeHTML(error.message)}</div>`;
        }
    }

    // Event listener para badges de documentos (delegado para resultadosDiv)
    resultadosDiv.addEventListener('click', function(e) {
        const badge = e.target.closest('.badge-documento.badge-clickable');
        if (badge) {
            e.preventDefault();
            handleDocumentoClick(badge);
        }
    });
});
</script>

