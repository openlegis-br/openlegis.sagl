				     <dtml-if sequence-start>
				       <div class="table-responsive">
				       <table class="table table-sm caption-top">
					<caption class="text-danger">Assinaturas Recusadas</caption>
					<thead class="table-light">
					  <tr>
					    <th>Usuário</th>
					    <th>Motivo</th>
					  </tr>
					</thead>
				     </dtml-if>
