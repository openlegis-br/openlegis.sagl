    // Função para renderizar paginação
    function renderizarPaginacao(data) {
        if (data.total_paginas <= 1) return '';
        let html = '<nav id="nav-paginacao" aria-label="Navegação de páginas"><ul class="pagination justify-content-center flex-wrap">';
        html += `<li class="page-item ${data.pagina === 1 ? 'disabled' : ''}">
                <a class="page-link" href="#" data-page="1" title="Primeira página">&laquo;</a>
            </li>`;
        html += `<li class="page-item ${data.pagina === 1 ? 'disabled' : ''}">
                <a class="page-link" href="#" data-page="${data.pagina - 1}">&lsaquo;</a>
            </li>`;
        const maxPagesToShow = 3;
        let startPage = Math.max(1, data.pagina - Math.floor(maxPagesToShow / 2));
        let endPage = Math.min(data.total_paginas, startPage + maxPagesToShow - 1);
        if (endPage - startPage + 1 < maxPagesToShow) {
            startPage = Math.max(1, endPage - maxPagesToShow + 1);
        }
        if (startPage > 1) {
            html += `<li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>`;
            if (startPage > 2) html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
        }
        for (let i = startPage; i <= endPage; i++) {
            html += `<li class="page-item ${i === data.pagina ? 'active' : ''}">
                    <a class="page-link" href="#" data-page="${i}">${i}</a>
                </li>`;
        }
        if (endPage < data.total_paginas) {
            if (endPage < data.total_paginas - 1) html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
            html += `<li class="page-item"><a class="page-link" href="#" data-page="${data.total_paginas}">${data.total_paginas}</a></li>`;
        }
        html += `<li class="page-item ${data.pagina === data.total_paginas ? 'disabled' : ''}">
                <a class="page-link" href="#" data-page="${data.pagina + 1}">&rsaquo;</a>
            </li>`;
        html += `<li class="page-item ${data.pagina === data.total_paginas ? 'disabled' : ''}">
