					  <tr>
					     <td><dtml-var nome_usuario></td>
					     <td><dtml-var dat_assinatura></td>
					  </tr>
				     <dtml-if sequence-end>
				       </table>
				      </div>
				     </dtml-if>
				  </dtml-in>
				 </dtml-if>
                          </div>
                       </div>
                       <div class="col-12">
                          <div class="row">
				<dtml-if expr="recusados!=None">
