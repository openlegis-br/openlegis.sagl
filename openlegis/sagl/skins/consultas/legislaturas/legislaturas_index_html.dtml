              <dtml-in expr="zsql.parlamentar_partido_obter_zsql(dat_filiacao=dat_filiacao, cod_parlamentar=cod_parlamentar)">
                  <dtml-var sgl_partido null="">
              </dtml-in>
           <dtml-else>
             Sem Registro
           </dtml-if>
          </dtml-in>
        <dtml-else>
          <dtml-var sgl_partido null="">
        </dtml-if>
      </td>      
    </tr>
    <dtml-if sequence-end>
       </tbody>
      </table>
     </div>
    </dtml-if sequence-end>
  </dtml-if listar_suplente>
</dtml-in>

